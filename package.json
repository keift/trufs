{
  "name": "trufs",
  "version": "1.2.4",
  "description": "Trusty file methods.",
  "license": "MIT",
  "main": "./dist/main.js",
  "module": "./dist/main.mjs",
  "types": "./dist/main.d.ts",
  "scripts": {
    "dev": "bun run --watch ./examples/trufs.example.ts",
    "test": "bun run lint && npm run test:atomically && npm run test:fs-extra && npm run test:graceful-fs",
    "test:atomically": "npm run ./test/Atomically/WriteFileSync.ts",
    "test:fs-extra": "npm run ./test/FSExtra/Copy.ts",
    "test:graceful-fs": "npm run ./test/GracefulFS/Gracefulify.ts",
    "prettier": "prettier --write ./",
    "build": "tsup",
    "lint": "eslint"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/graceful-fs": "^4.1.9",
    "atomically": "^2.0.3",
    "fs-extra": "^11.3.0",
    "graceful-fs": "^4.2.11"
  },
  "devDependencies": {
    "jiti": "^2.4.2",
    "prettier": "^3.5.3",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.32.1"
  },
  "engines": {
    "node": ">= 14.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/keift/trufs.git"
  },
  "keywords": [
    "fs",
    "file-system",
    "atomically",
    "fs-extra",
    "graceful-fs",
    "atomic",
    "atomic-reads",
    "atomic-writes"
  ]
}
